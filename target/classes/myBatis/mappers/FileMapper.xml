<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="FileMapper">
 	<insert id="fileWrite" parameterType="com.iu.file.FileDTO">
 		insert into files values(notice_seq.nextval, #{num}, #{fname}, #{oname})
 	</insert>
 	<delete id="fileDelete" parameterType="java.lang.Integer">
 		delete files where num=#{num}
 	</delete>
 	<update id="fileUpdate" parameterType="com.iu.file.FileDTO">
 		update notice set fname=#{fname}, oname=#{oname} where num=#{num}
 	</update>
 	<select id="fileSelect" parameterType="java.lang.Integer" resultType="com.iu.file.FileDTO">
 		select fnum, num, fname, oname from files where num=#{num}
 	</select>
 	
 	<select id="fileList" resultType="com.iu.board.notice.NoticeDTO" parameterType="com.iu.util.PageMaker">
 		select * from
 		(select rownum R, N.* from
 		(select * from files where
 		<choose>
			<when test="kind == 1">
				title
			</when>
			<when test="kind == 2">
				writer
			</when>
			<otherwise>
				contents
			</otherwise>
		</choose>
			like '%'||#{search}||'%' order by num desc) N)
 		where R between #{startRow} and #{lastRow}
 	</select>
 	
 	<select id="totalCount" parameterType="com.iu.util.PageMaker" resultType="java.lang.Integer">
		<!-- kind : 1(title), 2(writer), 3(contents) -->
		select count(num) from files where
		
		<choose>
			<when test="kind == 1">
				title
			</when>
			<when test="kind == 2">
				writer
			</when>
			<otherwise>
				contents
			</otherwise>
		</choose>
			like '%'||#{search}||'%'
		
		<!-- <if test="title == 1">
			where title like '%'||#{search}||'%'
		</if>
		<if test="title == 2">
			where writer like '%'||#{search}||'%'
		</if>
		<if test="title == 3">
			where contents like '%'||#{search}||'%'
		</if> -->
		
		
		
 	</select>
 </mapper>